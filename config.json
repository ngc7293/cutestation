{
    "io": [
        {
            "type": "tcp",
            "host": "0.0.0.0",
            "port": 42857
        }
    ],
    "windows": [
        {
            "name": "Anirniq",
            "widgets": [
                {
                    "type": "group",
                    "name": "Altitude",
                    "x": 0,
                    "y": 0,
                    "widgets": [
                        {
                            "type": "chart",
                            "name": "altitude.chart",
                            "refresh_rate": 2,
                            "sources": [
                                "anirniq.acquisition.altitude"
                            ],
                            "length": 60000,
                            "range": [
                                0,
                                30000
                            ],
                            "x": 0,
                            "y": 0,
                            "rowspan": 4
                        },
                        {
                            "type": "singlevalue",
                            "name": "altitude.current",
                            "label": "Current (m)",
                            "format": "%.2f",
                            "source": "anirniq.acquisition.altitude",
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 0
                        },
                        {
                            "type": "singlevalue",
                            "name": "altitude.max",
                            "label": "Maximum (m)",
                            "format": "%.2f",
                            "source": {
                                "source": "anirniq.acquisition.altitude",
                                "type": "max"
                            },
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 1
                        },
                        {
                            "type": "singlevalue",
                            "name": "altitude.min",
                            "label": "Minimum (m)",
                            "format": "%.2f",
                            "source": {
                                "source": "anirniq.acquisition.altitude",
                                "type": "min"
                            },
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 2
                        },
                        {
                            "type": "spacer",
                            "width": 200,
                            "height": 300,
                            "x": 1,
                            "y": 3
                        }
                    ]
                },
                {
                    "type": "group",
                    "name": "Velocity",
                    "x": 0,
                    "y": 1,
                    "widgets": [
                        {
                            "type": "chart",
                            "name": "velocity.chart",
                            "refresh_rate": 2,
                            "sources": [
                                "anirniq.acquisition.vertical_velocity"
                            ],
                            "length": 60000,
                            "range": [
                                0,
                                1250
                            ],
                            "x": 0,
                            "y": 0,
                            "rowspan": 4
                        },
                        {
                            "type": "singlevalue",
                            "name": "velocity.current",
                            "label": "Current (m/s)",
                            "format": "%.2f",
                            "source": "anirniq.acquisition.vertical_velocity",
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 0
                        },
                        {
                            "type": "singlevalue",
                            "name": "velocity.max",
                            "label": "Maximum (m/s)",
                            "format": "%.2f",
                            "source": {
                                "source": "anirniq.acquisition.vertical_velocity",
                                "type": "max"
                            },
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 1
                        },
                        {
                            "type": "singlevalue",
                            "name": "velocity.min",
                            "label": "Minimum (m/s)",
                            "format": "%.2f",
                            "source": {
                                "source": "anirniq.acquisition.vertical_velocity",
                                "type": "min"
                            },
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 2
                        },
                        {
                            "type": "spacer",
                            "width": 200,
                            "height": 300,
                            "x": 1,
                            "y": 3
                        }
                    ]
                },
                {
                    "type": "group",
                    "name": "GPS",
                    "x": 1,
                    "y": 0,
                    "widgets": [
                        {
                            "type": "compass",
                            "name": "gps.compass",
                            "radius": 1000,
                            "reference": [45.543000, -73.55000],
                            "target": ["anirniq.acquisition.gps.lat", "anirniq.acquisition.gps.lon"],
                            "refresh_rate": 60,
                            "x": 0,
                            "y": 0,
                            "width": 200,
                            "height": 200,
                            "colspan": 2
                        },
                        {
                            "type": "singlevalue",
                            "name": "gps.lat",
                            "label": "Latitude",
                            "format": "%.6f",
                            "source": "anirniq.acquisition.gps.lat",
                            "refresh_rate": 10,
                            "x": 0,
                            "y": 1
                        },
                        {
                            "type": "singlevalue",
                            "name": "gps.lon",
                            "label": "Longitude",
                            "format": "%.6f",
                            "source": "anirniq.acquisition.gps.lon",
                            "refresh_rate": 10,
                            "x": 1,
                            "y": 1
                        },
                        {
                            "type": "spacer",
                            "x": 0,
                            "y": 2,
                            "colspan": 2
                        }
                    ]
                }
            ]
        }
    ]
}