{
    "io" : [
        {
            "type": "unix",
            "path": "/tmp/cute"
        }
    ],
    "windows": [
        {
            "name": "Window 1",
            "widgets": [
                {
                    // (View)Widget-level config
                    "type": "chart",
                    "name": "GPS Latitude on secondary Window",
                    "refresh_rate": 60,
        
                    // Chart-specific config
                    "source": "anirniq.acquisition.gps.lat",
                    "length": 2000,
                    "range": [0, 2],

                    // Layout information
                    "x": 0,
                    "y": 1,
                    "rowspan": 2,
                    "height": 400
                },
                {
                    "type": "button",
                    "name": "AZ-3",
                    "refresh_rate": 60,

                    // Button-specific config
                    "command": "anirniq.remote_control.engine.sequence.stop",
                    
                    // Layout information
                    "x": 0,
                    "y": 0
                }
            ]
        }
    ]
}
