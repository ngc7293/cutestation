{
    "io" : [
        {
            "type": "tcp",
            "host": "0.0.0.0",
            "port": 42857
        }
    ],
    "windows": [
        {
            "name": "Window 1",
            "widgets": [
                {
                    // (View)Widget-level config
                    "type": "chart",
                    "name": "GPS Latitude on secondary Window",
                    "refresh_rate": 10,
        
                    // Chart-specific config
                    "sources": ["anirniq.acquisition.gps.lat", "anirniq.acquisition.gps.lon"],
                    "length": 2000,
                    "range": [0, 2],

                    // Layout information
                    "x": 0,
                    "y": 1,
                    "colspan": 2,
                    "height": 400
                },
                {
                    "type": "group",
                    "name": "Group!",
                    "x": 0,
                    "y": 2,
                    "colspan": 2,

                    "widgets": [
                        {
                            "type": "chart",
                            "name": "GPS Latitude on secondary Window",
                
                            "sources": ["anirniq.acquisition.gps.lat"],
                            "length": 2000,
                
                            "refresh_rate": 30,
                            "range": [0, 2],
                            "x": 0,
                            "y": 0,
                            "height": 400
                        }
                    ]
                },
                {
                    "type": "button",
                    "name": "AZ-3",
                    "refresh_rate": 60,

                    // Button-specific config
                    "command": "anirniq.remote_control.engine.sequence.stop",
                    
                    // Layout information
                    "x": 0,
                    "y": 0
                }
            ]
        },
        {
            "name": "Window 2",
            "widgets": [
                {
                    "type": "singlevalue",
                    "name": "Min",
                    "strategy": "min",
                    "source": "anirniq.acquisition.gps.lat",

                    "x": 0,
                    "y": 0
                },
                {
                    "type": "singlevalue",
                    "name": "Max",
                    "strategy": "max",
                    "source": "anirniq.acquisition.gps.lat",

                    "x": 1,
                    "y": 0
                }
            ]
        }
    ]
}
