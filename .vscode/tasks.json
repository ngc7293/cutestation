{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "qmake && make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "find src/ inc/ -name '*.cc' -o -name '*.hh' | xargs clang-format-6.0 -i -style=file",
            "group": "build"
        }
    ]
}